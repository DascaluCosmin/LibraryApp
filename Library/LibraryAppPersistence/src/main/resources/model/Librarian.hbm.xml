<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="domain.Librarian" table="LIBRARIANS">
        <id name="ID" type="java.lang.Integer">
            <column name="LIBRARIAN_ID" />
            <generator class="increment" />
        </id>
        <property name="name" type="java.lang.String" column="LIBRARIAN_NAME"/>
        <property name="username" type="java.lang.String" column="LIBRARIAN_USERNAME" />
        <property name="password" type="java.lang.String" column="LIBRARIAN_PASSWORD" />
        <many-to-one name="library" class="domain.Library" fetch="select" lazy="false">
            <column name="LIBRARY_ID" not-null="true" />
        </many-to-one>
    </class>
</hibernate-mapping>
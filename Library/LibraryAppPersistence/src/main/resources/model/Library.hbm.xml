<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="domain.Library" table="LIBRARIES">
        <id name="ID" type="java.lang.Integer">
            <column name="LIBRARY_ID" />
            <generator class="increment"/>
        </id>
        <property name="address" type="java.lang.String" column="LIBRARY_ADDRESS" />
        <property name="phoneNumber" type="java.lang.String" column="LIBRARY_PHONE_NUMBER" />
        <set name="books" table="BOOKS" inverse="true" cascade="save-update" lazy="true" fetch="select">
            <key>
                <column name="LIBRARY_ID" not-null="true" />
            </key>
            <one-to-many class="domain.Book"/>
        </set>

        <set name="librarians" table="LIBRARIANS" inverse="true" cascade="save-update" lazy="true" fetch="select">
            <key>
                <column name="LIBRARY_ID" not-null="true" />
            </key>
            <one-to-many class="domain.Librarian"/>
        </set>
    </class>
</hibernate-mapping>